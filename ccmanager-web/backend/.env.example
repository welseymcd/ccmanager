# Server Configuration
PORT=3001
HOST=0.0.0.0  # Set to 0.0.0.0 for network access, localhost for local only
NODE_ENV=development

# Frontend URL for CORS (update this when using --host)
FRONTEND_URL=http://localhost:5173
# For network access, add additional origins like:
# FRONTEND_URL=http://localhost:5173,http://192.168.1.100:5173

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database
DB_PATH=../data/ccmanager.db

# Session Management
SESSION_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds
SESSION_RETENTION_DAYS=7
MAX_SESSIONS_PER_USER=20

# System Monitoring
MONITORING_INTERVAL=60000  # 1 minute in milliseconds

# Logging
LOG_LEVEL=info
LOG_DIR=../logs

# Security
BCRYPT_ROUNDS=10
API_KEY_LENGTH=32

# Rate Limiting (if implemented)
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100